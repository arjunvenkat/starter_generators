<h1>Editing <%= human_name.titleize %> #<%%= @<%= singular_table_name %>.id %></h1>

<form action="/<%= plural_name %>/<%%= @<%= singular_table_name %>.id %>/update">
<% attributes.each do |attribute| -%>
  <div>
    <label for="<%= attribute.name %>"><%= attribute.name %></label><br />
    <input id="<%= attribute.name %>" name="<%= attribute.name %>" value="<%%= @<%= singular_table_name %>.<%= attribute.name %>  %>" type="text" />
  </div>
<% end -%>
  <div>
    <input type="submit">
  </div>
</form>


